{
    "name": "Virtual Device Editor",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Virtual Device Editor via localStorage",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "Virtual Device Editor",
      "default_popup": "popup.html"
    },
    "permissions": [
      "https://*/*",
      "storage"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://*/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }
  
